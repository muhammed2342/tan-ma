generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  phone        String   @unique
  passwordHash String
  firstName    String
  lastName     String
  photoDataUrl String
  latitude     Float?
  longitude    Float?
  profileVersions UserProfileVersion[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model UserProfileVersion {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  userId       String   @db.ObjectId
  user         User     @relation(fields: [userId], references: [id])
  phone        String
  firstName    String
  lastName     String
  photoDataUrl String
  createdAt    DateTime @default(now())
}
